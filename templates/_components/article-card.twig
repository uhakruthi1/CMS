{% set article = article ?? null %}
{% if article %}
<article class="kb-card">
    <div class="kb-card__body">
        <p class="kb-card__eyebrow">Knowledge Base</p>
        <h3 class="kb-card__title">
            <a href="{{ article.url }}">{{ article.title }}</a>
        </h3>
        <p class="kb-card__summary">{{ article.kbSummary }}</p>
        {% if article.kbTags|length %}
            <div class="kb-card__tags">
                {% for tag in article.kbTags %}
                    {% include '_components/tag-badge.twig' with { label: tag.title } only %}
                {% endfor %}
            </div>
        {% endif %}
    </div>
    <div class="kb-card__footer">
        <a href="{{ article.url }}" class="kb-card__cta">Read article â†’</a>
    </div>
</article>
{% endif %}
